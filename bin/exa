'use strict';

var Loader = require('./../loader/Loader');
var Q = require('q');
var util = require('util');
var path = require('path');

var sourceFile = process.argv[2];

if (sourceFile == null) {
    console.error("error: no source file specified");
    process.exit();
}

// get the path of the main module
var modulePath = path.dirname(sourceFile);
var moduleName = path.basename(sourceFile, '.exa');

// todo support specifying more libs on the command line and add to the dir of the main module
var loader = new Loader(modulePath);

var io = {
    stdout: {
        write: function (recur, args, attach) {

            process.stdout.write.apply(process.stdout, args);

            return Q();
        }
    }
};

var system = {
    env: process.env,
    listen: process.on
};

loader.getModule(moduleName).then(
    function (main) {

        console.error(main.compile().render(true) + '\n\n');

        // cut node off the arglist
        var args = Array.prototype.slice.call(process.argv, 1);

        main.run([args, io, system]).then(
            function (result) {
                console.log(result);
            },
            function (msg) {
                console.error(msg);
            }
        );
    }).done();


