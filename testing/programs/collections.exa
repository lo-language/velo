// Array literal (including empty), access, and cardinality
array = [];
words = ["foo", "mani", "padme", "hum"];

if #array != 0:
    fail "problem";

if words[2] != "padme":
    fail "oh me oh my";

if #words != 4:
    fail "what the deuce?!";

// Array slicing
subset = words[1:3];

if #subset != 2:
    fail "darn";

if subset[0] != words[1]:
    fail "uh oh";

if subset[1] != words[2]:
    fail "how could that be?"; 

// Array slicing shorthand
subset = words[:];

if #subset != #words:
    fail "dang";

if subset[1] != words[1]:
    fail "that's weird";

// Map literal (including empty), access, and cardinality
map = [:];
cities = ["nyc":"New York", "phi":"Philadelphia"];

if #map != 0:
    fail "problem";

if cities.nyc != "New York":
    fail "something happened";

if cities["nyc"] != "New York":
    fail "whoops";

if #cities != 2:
    fail "what the deuce?!";


