test is <-> {

    // sync calls

    foo();
    foo.bar();

    x = foo();
    (x, y) = foo();

    // todo?
    // x, y = foo();

    // async calls

    (18) >> foo;

    (sessionID) >> sessionStore.getByID;

    (bar, baz) = @foo(47);  // destructuring
    //47 >> foo => (bar, baz);  // destructuring

    // handle success only
    (48) >> bar -> {
        reply "hello";
    };

    // handle failure only
    (128) >> baz -> (result) {
    }
    on fail -> (err) {
        reply "bummer";
    };

    // todo
    // after baz(12) mute;

    // handle both success and failure
    (42) >> foo -> (a, b) {
        reply "yay";
    }
    on fail -> {
        reply "darn";
    };


    // nested requests
    // should we support pipes like 42 -> foo -> bar -> baz?
    (42) >> foo -> {

        (result) >> bar -> {

            yarp = @baz(result);
        }
        on fail -> {
            fail "narp";
        };
    }
    on fail -> {
        reply "darn";
    };

    // sync form in expressions

    foo(bar());

    x = foo() + 7;

    // async with fail handler only

    await () >> foo on fail -> (error) {
        substitute "ok";
    };

    // both handlers
    await () >> bar -> (result) {
        reply "ok";
    }
    on fail -> (error) {
        substitute "ok";
    };
};